                <a class="my-profile-button" href="#">My Profile</a>
            </div>
    <div class="details">
    	<!--    Change the date and time of bodega sale                      -->
    	<form>
    	<div class="detailsInfo">
		     <img class="icon" src="/images/date.png">
		
	        <label for="date">Select a Date:</label>
	        <input type="date" id="date" name="date">

	        <label for="time">Select a Time:</label>
	        <input type="time" id="time" name="time">


		</div> 
    	</form>
		
    </div>
    	
   
    	<div class="details">
    	<!--    Change the current location of the sale                      -->	
    		<form>
		  	<div class="detailsInfo">
		        <img class="icon" src="/images/location.png">

		       
			        <label for="location">Bodega Location: </label>
			        <select id="location" name="location">
			            <option value="option1">Quezon City</option>
			            <option value="option2">Metro Manila</option>
			            <option value="option3">Pasay</option>
			            <option value="option4">Baguio</option>
			        </select>

			 </div> 
			 </form>
		     
			
		</div>

		<div class="details">
		  	<div class="detailsInfo">
		        <img class="icon" src="/images/available.png">
		        <span class="availableLabel">
		     		Available products:
		     	</span>
		     
			</div> 
		</div>
<hr>
		<div class="availableProducts">		  
		<!--    Change the list of types sold in the bodega                      -->		
