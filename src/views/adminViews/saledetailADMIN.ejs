		        <div class="checkbox-container">

		        	
		            <div class="checkboxColumn">

			            <label for="checkbox1">
			                <input type="checkbox" id="checkbox1" name="checkbox1"> Option 1
			            </label>

			            <label for="checkbox2">
			                <input type="checkbox" id="checkbox2" name="checkbox2"> Option 2
			            </label>

			            <label for="checkbox3">
			                <input type="checkbox" id="checkbox3" name="checkbox3"> Option 3
			            </label>  

		            </div>

		            <div class="checkboxColumn">

			            <label for="checkbox4">
			                <input type="checkbox" id="checkbox1" name="checkbox1"> Option 1
			            </label>

			            <label for="checkbox5">
			                <input type="checkbox" id="checkbox2" name="checkbox2"> Option 2
			            </label>

			            <label for="checkbox6">
			                <input type="checkbox" id="checkbox3" name="checkbox3"> Option 3
			            </label>  

		            </div>

		            <div class="checkboxColumn">
			            <label for="checkbox7">
			                <input type="checkbox" id="checkbox1" name="checkbox1"> Option 1
			            </label>


			            <label for="checkbox8">
			                <input type="checkbox" id="checkbox2" name="checkbox2"> Option 2
			            </label>

			            <label for="checkbox9">
			                <input type="checkbox" id="checkbox3" name="checkbox3"> Option 3
			            </label>  

		            </div>

		            <div class="checkboxColumn">
			            <label for="checkbox8">
			                <input type="checkbox" id="checkbox1" name="checkbox1"> Option 1
			            </label>


			            <label for="checkbox9">
			                <input type="checkbox" id="checkbox2" name="checkbox2"> Option 2
			            </label>

			            <label for="checkbox10">
			                <input type="checkbox" id="checkbox3" name="checkbox3"> Option 3
			            </label>  

		            </div>
		   
		        </div>
		    </form>

		 

		</div>

		<br><br>
		<div class="details">
		   <form>
				<label for="planned">Set Planned sale: </label>
			     <select id="planned" name="planned">
			         <option value="option1">ManilaRUSH</option>
			         <option value="option2">ChristMUST</option>
			         <option value="option3">New Year New Sale</option>

			     </select>

			 </form>
	    </div>

	    <br><br>
	    <div class="btnContainer">
	    <button class="updateBtn" type="button" onclick="updateDetails()">Update</button>
	    </div>


</div>
