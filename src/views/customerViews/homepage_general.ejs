                <button class="cat_button">Freezer/Chiller</button>
                <button class="cat_button">Personal Computer</button>
                <button class="cat_button">Small Kitchen Appliances</button>
                <button class="cat_button">Speaker</button>
                <button class="cat_button">Storage/Plasticware</button>
                <button class="cat_button">Uncategorised</button>
                <button class="cat_button">Washing Machine/Dryer</button>
                <button class="cat_button">Vacuum Cleaner</button>
                <button class="cat_button">Videoke Machine</button>

        </aside>
        <div id="sale_items">
            <h1>Top Products</h1>
            <div id="cart_items">
                <% products.forEach((product)=> { %>
                    <%- include('../partials/homepageProducts', {product: product}); %>
                <% }) %>
            </div>
        </div>

    </div>
</body>
</html>